<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <TextView
            android:id="@+id/lbl_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Nombre Nombre" />

        <TextView
            android:id="@+id/lbl_apellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@id/lbl_nombre"
            tools:text="Apellido Apellido" />

        <TextView
            android:id="@+id/lbl_telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_apellido"
            android:layout_marginTop="5dp"
            tools:text="Telefono: 22222222" />

        <TextView
            android:id="@+id/lbl_dui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_telefono"
            android:layout_marginTop="5dp"
            tools:text="DUI: XXXXXXXXXXXXX" />
    </RelativeLayout>
</LinearLayout>
